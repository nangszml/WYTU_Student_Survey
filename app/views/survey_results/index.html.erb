<p id="notice"><%= notice %></p>


<h2 style="margin-top: 40px;">Survey Results</h2>

<% if @survey_results.present? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Student</th>
      <th>Survey Name</th>
      <th>Class Name</th>
      <th>Department</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_results.each do |survey_result| %>
      <tr>
        <td><%= survey_result.student.name %></td>
        <td><%= survey_result.survey_form.name %></td>
        <td><%= survey_result.student.class_name %></td>
        <td><%= survey_result.survey_form.department.name %></td>
        <td><%= survey_result.result %></td>
        <td><%= link_to 'Show', survey_result,  :class => 'btn btn-default btn-xs' %>
        <%#= link_to 'Edit', edit_survey_result_path(survey_result), :class => 'btn btn-default btn-xs' %>
        <%= link_to 'Destroy', survey_result, method: :delete, data: { confirm: 'Are you sure?' },  :class => 'btn btn-xs btn-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end -%>

