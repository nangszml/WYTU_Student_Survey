<%- model_class = SurveyForm -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_survey_form_path,
            :class => 'btn btn-primary' %>

  <!--<%= form_tag(students_path, method: :get, class: 'form-inline') do %>
  <div class="form-group">
    <%= select_tag "year", options_for_select(['1st Year', '2nd Year', '3rd Year', '4th Year', '5th Year', '6th Year'], params[:year]), include_blank: "All", class: 'form-control' %>
  </div>
  <%= submit_tag 'Search', :class => "btn btn-primary" %>
<% end %>-->

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:class_name) %></th>
      <th><%= model_class.human_attribute_name(:question) %></th>
      <th><%= model_class.human_attribute_name(:department_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @survey_forms.each do |survey_form| %>
      <tr>
        <!-- <td><%= link_to survey_form.id, survey_form_path(survey_form) %></td> -->
        <td><%= survey_form.name %></td>
        <td><%= survey_form.class_name %></td>
        <td><%= survey_form.question %></td>
        <td><%= Department.find(survey_form.department_id).name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      survey_form_path(survey_form), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_survey_form_path(survey_form), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      survey_form_path(survey_form),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


