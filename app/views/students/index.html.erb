<%- model_class = Student -%>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>

<div class="dropdown">
  <button class="btn dropdown-toggle">Year
    <i class="fa fa-caret-down"></i>
  </button>
  
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:class_name) %></th>
      <th><%= model_class.human_attribute_name(:rollno) %></th>
      <th><%= model_class.human_attribute_name(:department_id) %></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.class_name %></td>
        <td><%= student.rollno %></td>
        <td><%= student.department.name %></td>
